pipeline {
  agent any

  tools {
    maven "Maven3"
  }

  parameters {
    string(name: 'GIT_BRANCH', defaultValue: 'main', description: 'Branch to build')
    booleanParam(name: 'SKIP_TESTS', defaultValue: true, description: 'Skip Maven tests')
  }

  environment {
    TF_IN_AUTOMATION = '1'
  }

  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/betawins/hiring-app.git', branch: "${params.GIT_BRANCH}"
      }
    }

    stage('Terraform Init & Plan') {
      steps {
        sh 'terraform init -input=false'
        sh 'terraform validate'
        sh 'terraform plan -out=tfplan'
      }
    }

    stage('Approve Apply') {
      steps {
        input message: 'Proceed with Terraform Apply?'
      }
    }

    stage('Terraform Apply') {
      steps {
        sh 'terraform apply -auto-approve tfplan || terraform apply -auto-approve'
      }
    }

    stage('Maven Build') {
      steps {
        script {
          def skip = params.SKIP_TESTS ? "-DskipTests" : ""
          sh "mvn -B clean package ${skip}"
        }
      }
    }
  }

  post {
    failure {
      echo "❌ Pipeline failed. Check logs."
    }
    success {
      echo "✅ Pipeline succeeded!"
    }
  }
}
