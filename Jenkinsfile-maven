pipeline {
  agent any

  tools {
    maven "Maven3"        // Make sure Maven3 is configured in Jenkins global tools
    
  }

  environment {
    TF_IN_AUTOMATION = '1'
  }

  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/imrankhanmohammad257/hiring-app.git', branch: 'main'
      }
    }

    stage('Terraform Init & Plan') {
      steps {
        sh 'terraform init -input=false'
        sh 'terraform validate'
        sh 'terraform plan -out=tfplan'
      }
    }

    stage('Approve Apply') {
      steps {
        input message: 'Proceed with Terraform Apply?'
      }
    }

    stage('Terraform Apply') {
      steps {
        // try with plan file, fallback to direct apply if not found
        sh 'terraform apply -auto-approve tfplan || terraform apply -auto-approve'
      }
    }

    stage('Maven Build') {
      steps {
        sh 'mvn -B -DskipTests clean package'
      }
    }
  }

  post {
    failure {
      echo "❌ Pipeline failed. Please check logs."
    }
    success {
      echo "✅ Pipeline succeeded!"
    }
  }
}
