pipeline {
    agent any

    parameters {
        string(name: 'BRANCH', defaultValue: 'main', description: 'Git branch to build')
        booleanParam(name: 'SKIP_TESTS', defaultValue: true, description: 'Skip Maven tests?')
    }

    tools {
        maven "Maven3"   // Make sure Maven3 is configured in Jenkins global tools
    }

    environment {
        TF_IN_AUTOMATION = '1'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/imrankhanmohammad257/hiring-app.git', branch: "${params.BRANCH}"
            }
        }

        stage('Terraform Init & Plan') {
            steps {
                sh 'terraform init -input=false'
                sh 'terraform validate'
                sh 'terraform plan -out=tfplan'
            }
        }

        stage('Approve Apply') {
            steps {
                input message: 'Proceed with Terraform Apply?'
            }
        }

        stage('Terraform Apply') {
            steps {
                sh 'terraform apply -auto-approve tfplan || terraform apply -auto-approve'
            }
        }

        stage('Maven Build') {
            steps {
                script {
                    def skip = params.SKIP_TESTS ? "-DskipTests" : ""
                    sh "mvn -B clean package ${skip}"
                }
            }
        }
    }

    post {
        failure {
            echo "❌ Pipeline failed. Check logs."
        }
        success {
            echo "✅ Pipeline succeeded!"
        }
    }
}
